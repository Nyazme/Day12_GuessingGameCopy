<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Text text = "                   Guessing Game"
          fx:id = "guessGameText"
          GridPane.rowIndex ="0"></Text>

    <Text text = "I'm thinking of a number between 1 and 10. Can you guess what it is?"
          fx:id="questionText"
          GridPane.rowIndex="1"></Text>

    <Label text="Enter Guess"
           fx:id="guessText"
           GridPane.rowIndex="2"></Label>

    <Button text="Submit"
            fx:id="submitButton"
            onAction="#clickedTheButton"
            GridPane.rowIndex="3"
            GridPane.columnIndex="1"></Button>

    <TextField text=""
               fx:id="userInput"
               GridPane.rowIndex="3"
               GridPane.columnIndex="0"></TextField>

    <Text text=""
          fx:id="responseText"
          GridPane.rowIndex="4"></Text>












</GridPane>